{
  "failing-script": {
    "command": ["tests/bin/failing-script.sh"],
    "timeout": 30,
    "print_output": true,
    "error": {
      "expect": true
    }
  },
  "failing-script-good-code": {
    "command": ["tests/bin/failing-script.sh"],
    "timeout": 30,
    "print_output": true,
    "error": {
      "returncode": 42
    }
  },
  "failing-script-bad-code": {
    "command": ["tests/bin/failing-script.sh"],
    "timeout": 30,
    "print_output": true,
    "error": {
      "returncode": 555,
      "expect": true
    }
  },
  "succeeding-script": {
    "command": ["tests/bin/succeeding-script.sh"],
    "timeout": 30,
    "print_output": true
  },
  "stderr-script": {
    "command": ["tests/bin/stderr-script.sh"],
    "timeout": 30,
    "print_output": true,
    "stderr_contains": "stderr-wafflez_for_lifez"
  },
  "stdout-script": {
    "command": ["tests/bin/stdout-script.sh"],
    "timeout": 30,
    "print_output": true,
    "stdout_contains": "stdout-wafflez_for_lifez"
  },
  "stdout-script-no-match": {
    "command": ["tests/bin/stdout-script.sh"],
    "timeout": 30,
    "print_output": true,
    "stdout_contains": "not in the script",
    "error": {
      "error_class": "AssertionError"
    }
  },
  "nonexistent-script": {
    "command": ["tests/bin/footothebar-script.sh"],
    "timeout": 30,
    "print_output": true,
    "error": {
      "expect": true,
      "error_class": "FileNotFoundError"
    }
  }
}